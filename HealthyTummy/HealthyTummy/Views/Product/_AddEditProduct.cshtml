@model HealthyTummy.Models.Product

<div class="modal fade" id="addEditProduct" tabindex="-1" role="dialog" aria-labelledby="addEditProductLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                @{ 
                    var headerType = Model.ActionType == true ? "Add Product" : "Edit Product";
                    var actionType = headerType == "Add Product" ? "Create" : "Edit";
                }
                <h4 class="modal-title" id="addEditProductLabel">@headerType</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="@actionType">                  
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                            <div class="col">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter product name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col">
                                    <label asp-for="CaloriesPerUnit"></label>
                                    <input asp-for="CaloriesPerUnit" min="0" class="form-control" placeholder="Enter product calories">
                                    <span asp-validation-for="CaloriesPerUnit" class="text-danger"></span>
                                </div>
                                    <div class="col">
                                        <label for="inputState" asp-for="UnitType"></label>
                                        <select id="inputState" asp-for="UnitType" class="form-control" placeholder="Piece">
                                            <option selected>Piece</option>
                                            <option>Gram</option>
                                        </select>
                                    </div>
                            </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">

                <div class="container">
                    <div class="row text-center">
                        <div class="col">                          
                            <button type="button" class="btn btn-primary" data-save="modal">Submit</button>
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>