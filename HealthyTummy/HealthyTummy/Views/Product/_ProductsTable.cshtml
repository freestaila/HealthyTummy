@model IEnumerable<Product>

<table id="products"
        class="table table-bordered table-striped w-auto"
        style="table-layout: fixed; width:100%"
        data-url="@Url.Action("Index")">
        <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Calories</th>
                <th scope="col">Unit</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() == 0)
            {
                <tr>
                <td colspan="4">No products added yet. Please add at least one to show.</td>
                </tr>
            }
            else { 
                @foreach (var product in Model)
                {
                    <tr>
                        <td style="word-break:break-word; max-width: 40%; white-space:normal">@product.Name</td>
                        <td>@product.CaloriesPerUnit</td>
                        <td>@product.UnitType</td>
                        <td>
                            <div class="form-group">
                                <div class="btn-group">
                                    <div class="col">
                                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#editProduct"
                                                data-url="@Html.Raw(Url.Action("Edit", "Product", new { id = @product.Id }))">
                                            Edit
                                        </button>
                                    </div>
                                    <div class="col">
                                        <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#deleteProduct"
                                                data-url="@Html.Raw(Url.Action("Delete", "Product", new { id = @product.Id }))">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
