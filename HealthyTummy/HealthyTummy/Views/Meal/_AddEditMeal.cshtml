@model HealthyTummy.Models.Meal


    <div class="modal fade" id="addEditMeal" tabindex="-1" role="dialog" aria-labelledby="addEditMealLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    @{
                        var headerType = Model.Name == null ? "Add Meal" : "Edit Meal";
                        var actionType = headerType == "Add Meal" ? "Create" : "Edit";
                    }
                    <h4 class="modal-title" id="addEditMealLabel">@headerType</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form asp-action="@actionType">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Meal name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="row">
                                <table class="table">
                                    <tr>Choose meal products</tr>
                                    @if (ViewBag.ProductsList.Count != 0)
                                    {
                                        <tr>
                                            <td>
                                                <div class="container">
                                                    <div class="row">
                                                        <label for="products">Meal Products List</label>
                                                        <select name="productsList" id="productsList" class="selectpicker" multiple>
                                                            @*asp-items="@(new SelectList(ViewBag.ProductsList, "Id","Name"))"*@
                                                            @*@foreach (var product in ViewBag.ProductsList)
                                                                {
                                                                    <option id="productId"
                                                                            class="form-control">
                                                                        @product.Name
                                                                    </option>
                                                                }*@
                                                            <option>cos</option>
                                                            <option>co1s</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </td>

                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="list-group-item">No products added yet</tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">

                    <div class="container">
                        <div class="row text-center">
                            <div class="col">
                                <button type="button" class="btn btn-primary" data-save="modal">Submit</button>
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
