@model IEnumerable<HealthyTummy.Models.Day>

@{ ViewData["Title"] = "Day form";}

<div id="modal-placeholder"></div>

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-primary">Days List</h2>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addDay"
                    data-url="@Url.Action("Create")">
                Create
            </button>
        </div>
    </div>
    <br>
    <div class="row">
        @await Html.PartialAsync("_DaysTable", Model)
    </div>
</div>